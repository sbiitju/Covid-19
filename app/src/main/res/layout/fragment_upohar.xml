<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".Upohar">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.65"
        android:id="@+id/upoharrecaycler"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:weightSum="3"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        android:layout_weight=".35">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/askforfund"
            android:text="Ask For\nUpohar"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="14dp"
            android:background="#A7000000"
            android:textColor="#ffffff"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/checkbalance"
            android:layout_weight="1"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:text="Verification"
            android:background="#A7000000"
            android:textColor="#ffffff"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp"
            />
        <Button
            android:textSize="14dp"
            android:background="#A7000000"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:text="Fund \nDetails"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/aboutit"
            android:layout_weight="1"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp"
            />
    </LinearLayout>

</LinearLayout>
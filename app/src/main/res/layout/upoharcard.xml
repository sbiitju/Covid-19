<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="20dp"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:weightSum="3.4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:id="@+id/upoharcardpic"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/upoharcardtitle"
            android:layout_weight=".5"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="10dp"
            android:layout_gravity="center"
            android:id="@+id/upoharcardetailes"
            />
        <Button
            android:layout_width="150dp"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:layout_height="0dp"
            android:layout_weight=".4"
            android:text="Donate Now"
            android:layout_marginBottom="10dp"
            android:background="#E7DD2C00"
            android:id="@+id/upoharcardbtn"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>